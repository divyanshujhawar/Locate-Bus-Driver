<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#9E9E9E"
    android:layout_height="match_parent"
    tools:context="com.example.dell.buslocator.SignUpActivity">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:id="@+id/textInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etEmailAddress"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textInputLayout"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="#EEEEEE"
            android:ems="10"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/textInputLayout"
        android:id="@+id/textInputLayoutName">

        <android.support.design.widget.TextInputEditText
            android:layout_gravity="center_horizontal"
            android:id="@+id/etName"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textInputLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="#EEEEEE"
            android:ems="10"
            android:hint="Name"
            android:inputType="textEmailAddress"
            android:paddingLeft="8dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textInputLayoutName"
        android:layout_marginTop="11dp"
        android:id="@+id/textInputLayoutContact">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etContact"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="#EEEEEE"
            android:ems="10"
            android:hint="Contact"
            android:inputType="number"
            android:paddingLeft="8dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@id/textInputLayoutContact"
        android:id="@+id/textInputLayoutPassword">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSignUpPassword"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/textInputLayoutPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="#EEEEEE"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingLeft="8dp" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:layout_below="@id/textInputLayoutPassword"
        android:id="@+id/textInputLayoutConfirmPassword">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/etSignUpConfirmPassword"
            android:layout_width="269dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textInputLayoutPassword"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="67dp"
            android:background="#EEEEEE"
            android:ems="10"
            android:layout_gravity="center_horizontal"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingLeft="8dp" />

    </android.support.design.widget.TextInputLayout>



    <Button
        android:id="@+id/btSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="#F13A13"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textInputLayoutConfirmPassword"
        android:text="Sign Up" />

</RelativeLayout>
